{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }} - Success Sign Up
{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/login.css">
{% endblock %}

{% block content %}
    <div class="modal fade" id="bnj-success-login-sign-up" tabindex="-1" role="dialog"
         aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Thanks for joining us!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">
                        <a href="/Questionnaire/questionnaire">Take our quizz!</a></button>
                    <button type="button" class="btn btn-primary">
                        <a href="/Envelop/envelops">Go check our envelops!</a></button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/assets/js/login.js"></script>
{% endblock %}