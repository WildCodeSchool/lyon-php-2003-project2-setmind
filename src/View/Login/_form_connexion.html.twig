
<form id="bnj-sign-up-login-content" class="bnj-form-content" method="post"
      action="/Login/addUser">
    <div class="bnj-login-sign-up-catchphrase">
        Start your journey now!
    </div>
    <div id="carouselformsignup" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselformsignup" data-slide-to="0" class="active"></li>
            <li data-target="#carouselformsignup" data-slide-to="1"></li>
            <li data-target="#carouselformsignup" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block" src="https://cnie.dz/wp-content/uploads/2020/01/adobestock_177359950_72dpi.jpg"
                     width="600" height="auto" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block"
                     src="https://image.noelshack.com/fichiers-md/2015/52/1450778659-6986-card-communaute.jpg"
                     width="600" height="auto" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block"
                     src="https://s1.best-wallpaper.net/wallpaper/m/1801/Robot-skull-creative-design_m.jpg" width="600"
                     height="auto" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselformsignup" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselformsignup" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="form-group row bnj-login-form-row">
        <div class="col">
            <input type="text" class="form-control bnj-login-form-input" id="colFormLabel" name="last_name"
                   placeholder="Lastname" value="{% if error is defined %}{{ user.last_name }}{% endif %}">
            {% if error.lastName is defined %}
                <span style="color: red">{{ error.lastName }}</span>
            {% endif %}
        </div>
    </div>
    <div class="form-group row bnj-login-form-row">
        <div class="col">
            <input type="text" class="form-control bnj-login-form-input" id="colFormLabel" name="first_name"
                   placeholder="Firstname" value="{% if error is defined %}{{ user.first_name }}{% endif %}">
            {% if error.firstName is defined %}
                <span style="color: red">{{ error.firstName }}</span>
            {% endif %}
        </div>
    </div>
    <div class="form-group row bnj-login-form-row">
        <div class="col">
            <input type="email" class="form-control bnj-login-form-input" id="colFormLabel" name="email"
                   placeholder="Email" value="{% if error is defined %}{{ user.email }}{% endif %}">
            {% if error.email is defined %}
                <span style="color: red">{{ error.email }}</span>
            {% endif %}
        </div>
    </div>
    <div class="form-group row bnj-login-form-row">
        <div class="col">
            <input type="password" class="form-control bnj-login-form-input" id="colFormLabel" name="password"
                   placeholder="Password" value="{% if error is defined %}{{ user.password }}{% endif %}">
            {% if error.password is defined %}
                <span style="color: red">{{ error.password }}</span>
            {% endif %}
        </div>
    </div>
    <button type="submit" class="btn btn-primary">
        Sign up
    </button>
</form>

<form action="/Login/login" id="bnj-sign-in-login-content" class="bnj-form-content bnj-form-content-visible" method="post" target="">
    <div class="bnj-login-sign-up-catchphrase">
        Check out our brand new parts!
    </div>

    <div id="carouselformsignin" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselformsignin" data-slide-to="0" class="active"></li>
            <li data-target="#carouselformsignin" data-slide-to="1"></li>
            <li data-target="#carouselformsignin" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block"
                     src="https://www.inventions.news/wp-content/uploads/sites/340/2018/04/Robot-Hands.jpg" width="600"
                     height="auto" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block"
                     src="https://c1.lestechnophiles.com/www.numerama.com/content/uploads/2016/06/robots-1900.jpg"
                     width="600" height="auto" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block"
                     src="https://i.pinimg.com/originals/18/de/a8/18dea8d0e409167504367f89619181bf.jpg" width="auto"
                     height="300" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselformsignin" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselformsignin" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="form-group row bnj-login-form-row">
        <div class="col">
            <input name="email" type="email" class="form-control bnj-login-form-input" id="colFormLabel"
                   placeholder="Email">
            <span style="color:red;">{{ errors.email }}</span>
        </div>
    </div>
    <div class="form-group row bnj-login-form-row">
        <div class="col">
            <input name="password" type="password" class="form-control bnj-login-form-input" id="colFormLabel"
                   placeholder="Password">
            <span style="color:red;">{{ errors.password }}</span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-lg">Sign in</button>
</form>
